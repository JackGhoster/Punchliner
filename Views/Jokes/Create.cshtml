@model Punchliner.Models.Joke

@{
    ViewData["Title"] = "Create";
}

<h1>Create your new</h1>

<h4>Most unique and brilliant joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JokeSetup" class="control-label">Joke Set-up</label>
                <input asp-for="JokeSetup" class="form-control" />
                <span asp-validation-for="JokeSetup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JokePunchline" class="control-label">Joke Punchline</label>
                <input asp-for="JokePunchline" class="form-control" />
                <span asp-validation-for="JokePunchline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark"/>
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to the list of jokes</a>
</div>
<style>
    .back{
        margin-bottom: 20px;
    }

    .form-group{
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .btn .btn-dark:hover{
        color: #b6ff9d;
        background-color: #585c61;
        border-color: #1a1e21;
    }
    a{
        font-size: 20px;
        transition: color 0.5s;
        text-decoration:none;
        color: black;
    }
    a:hover{
            color: #585c61;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
